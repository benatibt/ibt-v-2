{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 3,
	"title": "Islands Book Trust",
	"description": "Accessible, bookish block theme for Islands Book Trust",
	"settings": {
		"appearanceTools": true,
		"layout": {
			"contentSize": "50rem",
			"wideSize": "80rem"
		},
		"useRootPaddingAwareAlignments": true,
		"spacing": {
			"defaultSpacingSizes": false,
			"blockGap": true,
			"margin": true,
			"padding": true,
			"units": [ "rem", "%", "px" ],
			"spacingSizes": [
				{ "slug": "xxs", "name": "XXS", "size": "0.3rem" },
				{ "slug": "xs", "name": "XS", "size": "0.6rem" },
				{ "slug": "s",  "name": "S",  "size": "1.2rem" },
				{ "slug": "m",  "name": "M",  "size": "1.8rem" },
				{ "slug": "l",  "name": "L",  "size": "2.4rem" },
				{ "slug": "xl", "name": "XL", "size": "3.6rem" }
			]
		},
		"border": { "color": true, "radius": true, "style": true, "width": true },
		"typography": {
			"customFontSize": true,
			"defaultFontSizes": false,
			"dropCap": true,
			"fluid": true,
			"letterSpacing": true,
			"lineHeight": true,
			"textDecoration": true,
			"textTransform": true,
			"fontFamilies": [
				{
					"name": "Body Font",
					"slug": "body-font",
					"fontFamily": "\"Source Serif 4\", Georgia, Cambria, \"Times New Roman\", Times, serif",
					"fontFace": [
						{
							"fontFamily": "Source Serif 4",
							"fontWeight": "200 900",
							"fontStyle": "normal",
							"src": [ "file:./assets/fonts/source-serif-4/SourceSerif4Variable-Roman.ttf.woff2" ]
						},
						{
							"fontFamily": "Source Serif 4",
							"fontWeight": "200 900",
							"fontStyle": "italic",
							"src": [ "file:./assets/fonts/source-serif-4/SourceSerif4Variable-Italic.ttf.woff2" ]
						}
					]
				},
				{
					"name": "Title Font",
					"slug": "title-font",
					"fontFamily": "\"Source Sans 3\", -apple-system, BlinkMacSystemFont, \"Segoe UI\", Roboto, Ubuntu, \"Helvetica Neue\", Arial, sans-serif",
					"fontFace": [
						{
							"fontFamily": "Source Sans 3",
							"fontWeight": "200 900",
							"fontStyle": "normal",
							"src": [ "file:./assets/fonts/source-sans-3/SourceSans3VF-Upright.ttf.woff2" ]
						}
					]
				}
			],
			"fontSizes": [
				{ "name": "S",  "slug": "s",  "size": "0.95rem", "fluid": false },
				{ "name": "M",  "slug": "m",  "size": "1.2rem", "fluid": false },
				{ "name": "L",  "slug": "l",  "size": "1.5rem",   "fluid": { "min": "1.36rem", "max": "1.6rem" } },
				{ "name": "XL", "slug": "xl", "size": "1.88rem", "fluid": { "min": "1.70rem", "max": "2.12rem" } },
				{ "name": "XXL","slug": "xxl","size": "2.34rem","fluid": { "min": "2.13rem", "max": "2.82rem" } },
				{ "name": "XXXL","slug": "xxxl","size": "2.93rem","fluid": { "min": "2.66rem", "max": "3.75rem" } }
			]
		},
		"blocks": {
			"core/button":{
				"color": {"custom": false}
			}
		},
		"color": {
			"custom": true,
			"defaultPalette": false,
			"palette": [
				{ "slug": "background",  "name": "Background (Paper)",          "color": "#FAF9F7" },
				{ "slug": "surface",     "name": "Surface (White cards)",       "color": "#FFFFFF" },
				{ "slug": "black",  "name": "Black", "color": "#000000" },
				{ "slug": "text-normal", "name": "Text Normal",                 "color": "#000000" },
				{ "slug": "text-muted",  "name": "Text Muted (meta)",           "color": "#5F6366" },
				{ "slug": "border-grey", "name": "Border Grey",                 "color": "#D0D7DD" },
				{ "slug": "emphasis-primary",   "name": "Emphasis · Primary (Stone-Strong)",  "color": "#5D5248" },
				{ "slug": "emphasis-secondary", "name": "Emphasis · Secondary (Ocean-Strong)","color": "#243E7D" }
			]
		},
		"custom": {
			"color":{
				"color-primary": "#5C554E",
				"color-primary-hover": "#2b2621",
				"color-primary-strong": "#4A443E",

				"color-secondary": "#315FA3",
				"color-secondary-hover": "#25477A",
				"color-secondary-strong": "#111e3b",

				"color-header-bg": "#ECE7E1",
				"color-header-border": "#7A7168",
				"color-border": "#D0D7DD",

				"color-success": "#1B5C55",
				"color-success-tint": "#E4EBEB",
				"color-warning": "#805D25",
				"color-warning-tint": "#F0ECE5",
				"color-error": "#6E2B2B",
				"color-error-tint": "#EEE6E6",
				"color-info": "#465059",
				"color-info-tint": "#E9EAEB",
				"color-disabled": "#666E70",
				"color-disabled-tint": "#F0F1F2",
				
				"color-text-emphasis-primary-visited": "#312B25"
			},
			"search": {
				"border":{
					"radius": "4px",
					"width": "1px"
				},
				"padding":{
					"top": "4px",
					"bottom": "4px",
					"left": "var(--wp--preset--spacing--xs)",
					"right": "var(--wp--preset--spacing--xs)"
				},
				"height": "48px"
			}
		},
		"shadow": {"defaultPresets": true}
	},
	"styles": {
		"spacing": {
			"blockGap": "0",
			"margin": {
				"top":"0",
				"bottom":"0",
				"left": "0",
				"right":"0"
			},
			"padding": {
				"top":"0",
				"bottom":"0",
				"left":  "clamp(1rem, 4vw, 3rem)",
				"right": "clamp(1rem, 4vw, 3rem)"
			}
		},
		"color": {
			"text": "var(--wp--preset--color--text-normal)",
			"background": "var(--wp--preset--color--background)"
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--title-font)",
			"fontSize": "var(--wp--preset--font-size--m)",
			"lineHeight": "1.35"
		},
		"elements": {
			"link": {
				"color": {"text": "var(--wp--preset--color--emphasis-primary)"}
				}
		},
		"blocks": {
			"core/archives": {},
			"core/button": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--title-font)",
					"fontWeight": "600"
				},
				"color": {
					"text":"#FFFFFF",
					"background": "var(--wp--custom--color--color-primary)"
				},
				"border": {
					"radius": "8px",
					"width": "2px",
					"style": "solid",
					"color": "var(--wp--custom--color--color-primary)"
				},
				"spacing": {
					"padding": {
					"top": "0.75rem",
					"right": "1.25rem",
					"bottom": "0.75rem",
					"left": "1.25rem"
					}
				},
				"variations": {
					"outline": {
						"color": {
							"text": "var(--wp--custom--color--color-primary)",
							"background": "transparent"
						},
						"border": {
							"color": "var(--wp--custom--color--color-primary)"
						},
						"spacing": {
							"padding": {
								"top": "0.75rem",
								"right": "1.25rem",
								"bottom": "0.75rem",
								"left": "1.25rem"
							}
						}
					}
				}
			},
			"core/buttons": {
				"spacing": { "blockGap": "var(--wp--preset--spacing--s)" }
			},
			"core/categories": {},
			"core/columns": {},
			"core/cover": {
				"spacing": {},
				"color": {},
				"elements": { "link": {} }
			},
			"core/gallery": {
				"spacing": {},
				"color": {},
				"elements": { "link": {} }
			},
			"core/group": {},
			"core/heading": {
				"typography": { "lineHeight": "1.2" },
				"spacing": { "padding": { "bottom": "0" } }
			},
			"core/image": {
				"spacing": { "margin": { "top": "0", "bottom": "0" } },
				"elements": { "link": {} }
			},
			"core/latest-comments": {},
			"core/latest-posts": {},
			"core/list": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--body-font)",
					"fontSize": "var(--wp--preset--font-size--m)",
					"lineHeight": "1.6"
				},
				"spacing": {
					"margin": {
						"top": "var(--wp--preset--spacing--s)",
						"bottom": "var(--wp--preset--spacing--s)"
					}
				},
				"elements": { "link": {} }
			},
			"core/media-text": {
				"typography": { "fontFamily": "var(--wp--preset--font-family--body-font)" },
				"spacing": {},
				"color": {},
				"elements": { "link": {} }
			},
			"core/navigation": {
				"typography": {"fontWeight": "600"},
				"color": {"text": "var(--wp--preset--color--emphasis-primary)"},
				"spacing": {},
				"elements": {
					"link": {
						"typography": { "textDecoration": "none" }
					}
			 	}
			},
			"core/navigation-link": {
				"typography": {},
				"color": {},
				"spacing": {},
				"border": {},
				"elements": {}
			},
			"core/navigation-submenu": {
				"typography": {},
				"color": {},
				"spacing": {},
				"border": {},
				"elements": { "link": {} }
			},
			"core/paragraph": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--body-font)",
					"fontSize": "var(--wp--preset--font-size--m)",
					"lineHeight": "1.6"
				},
				"spacing": {
					"padding": {
						"top": "var(--wp--preset--spacing--xs)",
						"bottom": "var(--wp--preset--spacing--xs)"
					}
				},
				"elements": { "link": {} }
			},
			"core/pullquote": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--body-font)",
					"fontStyle": "italic",
					"fontSize": "var(--wp--preset--font-size--m)",
					"lineHeight": "1.6"
				},
				"color": { "background": "var(--wp--preset--color--alt-background)" },
				"spacing": {
					"margin": {
						"top": "var(--wp--preset--spacing--s)",
						"bottom": "var(--wp--preset--spacing--s)",
						"left": "var(--wp--preset--spacing--m)",
						"right": "var(--wp--preset--spacing--m)"
					},
					"padding": {
						"top": "var(--wp--preset--spacing--m)",
						"bottom": "var(--wp--preset--spacing--m)",
						"left": "var(--wp--preset--spacing--m)",
						"right": "var(--wp--preset--spacing--m)"
					}
				}
			},
			"core/quote": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--body-font)",
					"fontStyle": "italic",
					"lineHeight": "1.6"
				},
				"border": { "left": { "width": "0", "style": "none" } },
				"spacing": {
					"margin": {
						"top": "var(--wp--preset--spacing--s)",
						"bottom": "var(--wp--preset--spacing--s)",
						"left": "var(--wp--preset--spacing--m)",
						"right": "var(--wp--preset--spacing--m)"
					}
				},
				"elements": { "link": {} }
			},
			"core/rss": {},
			"core/search": {
				"typography": {},
				"spacing": {},
				"border": {},
				"color": {}
			},
			"core/table": {
				"typography": { "fontFamily": "var(--wp--preset--font-family--body-font)" },
				"spacing": {},
				"border": {},
				"color": {},
				"elements": { "link": {} }
			},
			"core/tag-cloud": {
				"typography": {},
				"spacing": {},
				"border": {},
				"color": {}
			}
		}
	}
}

